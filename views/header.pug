link(rel='stylesheet' href='css/header.css')
link(href="https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400;500&display=swap" rel="stylesheet")
script(src="scripts/header.js")
.header
  a#icon(href='/home' alt='home' title='heapOverFlow')
    img(src='images/appIcon.png' alt='heapOverflow Icon')
  #searchBar
    img(src='images/search.svg' alt='search icon')
    form(action="/search" id="searchForm")
      if(searchQuery)
        input(value=searchQuery type='search' id='searchField' onsearch='search()' autocomplete="off" placeholder='Search..' name='searchQuery')
      else
        input(type='search' id='searchField' onsearch='search()' autocomplete="off" placeholder='Search..' name='searchQuery')
  if (user)
    a#profileButton(href=`/profile?userId=${user.user_id}`)
      img(src=user.avatar alt='avatar')
  else
    a.headerButton#login(href=`/entry?type=login&targetPath=${currPath}`)
      ='Login'
    a.headerButton#signUp(href=`/entry?type=signUp&targetPath=${currPath}`)
      ='Sign Up'
